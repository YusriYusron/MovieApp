<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_movies"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/colorPrimary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_movies"
        android:layout_toEndOf="@id/image_movies"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">
        <TextView
            android:id="@+id/judul_film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Judul Film"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10sp"/>
        <TextView
            android:id="@+id/deskripsi_film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Deskripsi Film"
            android:textSize="15sp"
            android:maxLines="3"/>
    </LinearLayout>
</RelativeLayout>